<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      color: #2c3e50;
      margin: 20px;
      line-height: 1.6;
      background-color: #f5f6fa;
    }

    .container {
      max-width: 900px;
      margin: auto;
    }

    h1 {
      font-size: 2em;
      margin-bottom: 10px;
      text-align: center;
      color: #34495e;
    }

    h2 {
      font-size: 1.4em;
      margin-bottom: 15px;
      color: #2980b9;
      border-bottom: 2px solid #3498db;
      padding-bottom: 5px;
    }

    .section {
      margin-bottom: 30px;
    }

    .card {
      background: #fff;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 15px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }

    .card:hover {
      transform: translateY(-3px);
    }

    .highlight {
      background-color: #ffeaa7;
      font-weight: bold;
      padding: 2px 4px;
      border-radius: 3px;
    }

    a {
      color: #3498db;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body class="card-based">
  <div class="container">

    <!-- Personal Info -->
    <div class="section">
      <h1><%- data.personalInfo.name %></h1>
      <p style="text-align:center;">
        Email: <%- data.personalInfo.email %> | Contact: <%- data.personalInfo.contact %>
      </p>
      <p style="text-align:center;">
        <% if (data.personalInfo.linkedin) { %>
          <a href="<%- data.personalInfo.linkedin %>">LinkedIn</a>
        <% } %>
        <% if (data.personalInfo.github) { %>
          | <a href="<%- data.personalInfo.github %>">GitHub</a>
        <% } %>
        <% if (data.personalInfo.portfolio) { %>
          | <a href="<%- data.personalInfo.portfolio %>">Portfolio</a>
        <% } %>
      </p>
    </div>

    <!-- Summary -->
    <% if (data.summary) { %>
    <div class="section">
      <h2>Professional Summary</h2>
      <div class="card">
        <p><%- data.summary %></p>
      </div>
    </div>
    <% } %>

    <!-- Skills -->
    <% if (data.skills.length) { %>
    <div class="section">
      <h2>Skills</h2>
      <div class="card">
        <% data.skills.forEach(skillGroup => { %>
          <p><strong><%- skillGroup.category %>:</strong></p>
          <ul>
            <% skillGroup.items.forEach(item => { %>
              <li class="highlight"><%- item %></li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
    </div>
    <% } %>

    <!-- Work Experience -->
    <% if (data.workExperience.length) { %>
    <div class="section">
      <h2>Work Experience</h2>
      <% data.workExperience.forEach(exp => { %>
        <div class="card">
          <p><strong><%- exp.role %></strong> at <%- exp.company %></p>
          <p><em><%- exp.startDate %> - <%- exp.endDate || "Present" %></em></p>
          <p><%- exp.description %></p>
        </div>
      <% }) %>
    </div>
    <% } %>

    <!-- Projects -->
    <% if (data.projects.length) { %>
    <div class="section">
      <h2>Projects</h2>
      <% data.projects.forEach(project => { %>
        <div class="card">
          <p><strong><%- project.title %></strong></p>
          <p><%- project.description %></p>
          <% if (project.link) { %>
            <p>Link: <a href="<%- project.link %>"><%- project.link %></a></p>
          <% } %>
        </div>
      <% }) %>
    </div>
    <% } %>

    <!-- Education -->
    <% if (data.education.length) { %>
    <div class="section">
      <h2>Education</h2>
      <% data.education.forEach(edu => { %>
        <div class="card">
          <p><strong><%- edu.degree %></strong> at <%- edu.institution %></p>
          <p><em><%- edu.startDate %> - <%- edu.endDate || "Present" %></em></p>
        </div>
      <% }) %>
    </div>
    <% } %>

    <!-- Achievements -->
    <% if (data.achievements.length) { %>
    <div class="section">
      <h2>Achievements</h2>
      <% data.achievements.forEach(a => { %>
        <div class="card">
          <p><%- a %></p>
        </div>
      <% }) %>
    </div>
    <% } %>

  </div>
</body>
</html>
