<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Courier New', monospace;
      background: #f1f2f6;
      color: #2d3436;
    }

    .section {
      padding: 40px 20px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .section:nth-child(even) {
      background: #f9ca24;
    }

    .section:nth-child(odd) {
      background: #e056fd;
      color: #fff;
    }

    h1, h2 {
      margin-top: 0;
    }

    h1 {
      font-size: 2.8em;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    h2 {
      font-size: 1.8em;
      margin-bottom: 15px;
      border-bottom: 2px solid rgba(0,0,0,0.2);
      padding-bottom: 5px;
    }

    p, li {
      line-height: 1.7;
    }

    ul {
      padding-left: 25px;
    }

    .highlight {
      background-color: #fffa65;
      font-weight: bold;
      border-radius: 3px;
      padding: 1px 3px;
      color: #2d3436;
    }

    a {
      color: inherit;
      text-decoration: underline;
      font-weight: bold;
    }

    .personal-info {
      text-align: center;
    }
    .personal-info h1 {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

  <!-- Personal Info -->
  <div class="section personal-info">
    <h1><%- data.personalInfo.name %></h1>
    <p>Email: <%- data.personalInfo.email %> | Contact: <%- data.personalInfo.contact %></p>
    <p>
      <% if (data.personalInfo.linkedin) { %>
        LinkedIn: <a href="<%- data.personalInfo.linkedin %>"><%- data.personalInfo.linkedin %></a>
      <% } %>
      <% if (data.personalInfo.github) { %>
        <% if (data.personalInfo.linkedin) { %> | <% } %>
        GitHub: <a href="<%- data.personalInfo.github %>"><%- data.personalInfo.github %></a>
      <% } %>
      <% if (data.personalInfo.portfolio) { %>
        <% if (data.personalInfo.linkedin || data.personalInfo.github) { %> | <% } %>
        Portfolio: <a href="<%- data.personalInfo.portfolio %>"><%- data.personalInfo.portfolio %></a>
      <% } %>
      <% if (data.personalInfo.socialLinks && data.personalInfo.socialLinks.length) { %>
        <% data.personalInfo.socialLinks.forEach(link => { %> | 
          <a href="<%- link %>"><%- link %></a>
        <% }) %>
      <% } %>
    </p>
  </div>

  <!-- âœ… Professional Summary Section -->
  <% if (data.summary) { %>
  <div class="section">
    <h2>Professional Summary</h2>
    <p><%- data.summary %></p>
  </div>
  <% } %>

  <!-- Skills -->
  <% if (data.skills.length) { %>
  <div class="section">
    <h2>Skills</h2>
    <% data.skills.forEach(skillGroup => { %>
      <p><strong><%- skillGroup.category %>:</strong></p>
      <ul>
        <% skillGroup.items.forEach(item => { %>
          <li class="highlight"><%- item %></li>
        <% }) %>
      </ul>
    <% }) %>
  </div>
  <% } %>

  <!-- Work Experience -->
  <% if (data.workExperience.length) { %>
  <div class="section">
    <h2>Work Experience</h2>
    <% data.workExperience.forEach(exp => { %>
      <p><strong><%- exp.role %> at <%- exp.company %></strong> (<%- exp.startDate %> - <%- exp.endDate || "Present" %>)</p>
      <p><%- exp.description %></p>
    <% }) %>
  </div>
  <% } %>


  <!-- Projects -->
  <% if (data.projects.length) { %>
  <div class="section">
    <h2>Projects</h2>
    <% data.projects.forEach(project => { %>
      <p><strong><%- project.title %></strong></p>
      <p><%- project.description %></p>
      <% if (project.link) { %>
        <p>Link: <a href="<%- project.link %>"><%- project.link %></a></p>
      <% } %>
    <% }) %>
  </div>
  <% } %>

  
  <!-- Education -->
  <% if (data.education.length) { %>
  <div class="section">
    <h2>Education</h2>
    <% data.education.forEach(edu => { %>
      <p><strong><%- edu.degree %></strong> at <%- edu.institution %> (<%- edu.startDate %> - <%- edu.endDate || "Present" %>)</p>
    <% }) %>
  </div>
  <% } %>

  <!-- Achievements -->
  <% if (data.achievements.length) { %>
  <div class="section">
    <h2>Achievements</h2>
    <ul>
      <% data.achievements.forEach(a => { %>
        <li class="highlight"><%- a %></li>
      <% }) %>
    </ul>
  </div>
  <% } %>

</body>
</html>
