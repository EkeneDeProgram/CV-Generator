<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Courier New', monospace;
      background: linear-gradient(135deg, #f9ca24, #e056fd);
      color: #2d3436;
    }
    .container {
      max-width: 850px;
      margin: 40px auto;
      background: rgba(255,255,255,0.95);
      padding: 35px;
      border-radius: 15px;
      box-shadow: 0 0 25px rgba(0,0,0,0.2);
    }
    h1 {
      font-size: 2.8em;
      margin-bottom: 10px;
      color: #e056fd;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    h2 {
      font-size: 1.5em;
      margin-top: 25px;
      margin-bottom: 10px;
      color: #f9ca24;
      text-decoration: underline;
    }
    p, li {
      line-height: 1.7;
    }
    ul {
      padding-left: 25px;
    }
    .section {
      margin-bottom: 30px;
    }
    .highlight {
      background-color: #fffa65;
      font-weight: bold;
      border-radius: 3px;
      padding: 1px 3px;
    }
    a {
      color: #e056fd;
      text-decoration: none;
      font-weight: bold;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">

    <!-- Personal Info -->
    <div class="section">
      <h1><%- data.personalInfo.name %></h1>
      <p>Email: <%- data.personalInfo.email %> | Contact: <%- data.personalInfo.contact %></p>
      <p>
        <% if (data.personalInfo.linkedin) { %>
          LinkedIn: <a href="<%- data.personalInfo.linkedin %>"><%- data.personalInfo.linkedin %></a>
        <% } %>
        <% if (data.personalInfo.github) { %>
          <% if (data.personalInfo.linkedin) { %> | <% } %>
          GitHub: <a href="<%- data.personalInfo.github %>"><%- data.personalInfo.github %></a>
        <% } %>
        <% if (data.personalInfo.portfolio) { %>
          <% if (data.personalInfo.linkedin || data.personalInfo.github) { %> | <% } %>
          Portfolio: <a href="<%- data.personalInfo.portfolio %>"><%- data.personalInfo.portfolio %></a>
        <% } %>
      </p>
    </div>

    <!-- Skills -->
    <% if (data.skills.length) { %>
    <div class="section">
      <h2>Skills</h2>
      <ul>
        <% data.skills.forEach(skillGroup => { %>
          <% skillGroup.items.forEach(skill => { %>
            <li class="highlight"><%- skill %></li>
          <% }) %>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <!-- Work Experience -->
    <% if (data.workExperience.length) { %>
    <div class="section">
      <h2>Work Experience</h2>
      <% data.workExperience.forEach(exp => { %>
        <p><strong><%- exp.role %> at <%- exp.company %></strong> (<%- exp.startDate %> - <%- exp.endDate || "Present" %>)</p>
        <p><%- exp.description %></p>
      <% }) %>
    </div>
    <% } %>

    <!-- Projects -->
    <% if (data.projects.length) { %>
    <div class="section">
      <h2>Projects</h2>
      <% data.projects.forEach(project => { %>
        <p><strong><%- project.title %></strong></p>
        <p><%- project.description %></p>
        <% if (project.link) { %>
          <p>Link: <a href="<%- project.link %>"><%- project.link %></a></p>
        <% } %>
      <% }) %>
    </div>
    <% } %>

    <!-- Achievements -->
    <% if (data.achievements.length) { %>
    <div class="section">
      <h2>Achievements</h2>
      <ul>
        <% data.achievements.forEach(a => { %>
          <li class="highlight"><%- a %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

  </div>
</body>
</html>
