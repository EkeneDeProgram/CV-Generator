<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    :root {
      --accent: #2c3e50;
      --accent-light: #ecf4fa;
      --muted: #7f8c8d;
      --bg: #f5f6fa;
      --card: #ffffff;
      --highlight-bg: #ffeaa7;
      --border-radius: 12px;
    }

    body {
      margin: 0;
      padding: 20px;
      font-family: 'Inter', 'Segoe UI', Helvetica, sans-serif;
      background-color: var(--bg);
      color: #333;
      line-height: 1.6;
    }

    .container {
      display: flex;
      max-width: 1000px;
      margin: 0 auto;
      background: var(--card);
      border-radius: var(--border-radius);
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      overflow: hidden;
    }

    .sidebar {
      width: 30%;
      background-color: var(--accent-light);
      padding: 30px;
      box-sizing: border-box;
      border-right: 1px solid #ddd;
    }
    /* Ensure long text wraps properly in sidebar */
    .sidebar p,
    .sidebar a {
    word-break: break-word;      /* Break long words if needed */
    overflow-wrap: anywhere;     /* Allow breaking at any point */
    display: block;              /* Make sure links behave as block elements */
    margin-bottom: 8px;          /* Add spacing between lines */
    }


    .main {
      width: 70%;
      padding: 30px;
      box-sizing: border-box;
    }

    /* Personal Info */
    h1 {
      font-size: 2em;
      margin-bottom: 10px;
      color: var(--accent);
    }

    h2 {
      font-size: 1.5em;
      color: var(--accent);
      margin-top: 20px;
      margin-bottom: 10px;
      border-bottom: 2px solid #eaeaea;
      padding-bottom: 4px;
    }

    p, li {
      line-height: 1.6;
    }

    ul {
      padding-left: 20px;
      margin: 5px 0;
    }

    a {
      color: var(--accent);
      text-decoration: none;
      font-weight: 500;
    }

    a:hover {
      text-decoration: underline;
    }

    .section {
      margin-bottom: 25px;
    }

    /* Highlight keywords */
    .highlight {
      background-color: var(--highlight-bg);
      font-weight: bold;
      padding: 2px 6px;
      border-radius: 4px;
    }

    /* Skill badges */
    .skill-badge {
      display: inline-block;
      background: var(--accent);
      color: #fff;
      font-size: 13px;
      padding: 4px 10px;
      margin: 4px 4px 0 0;
      border-radius: 20px;
      font-weight: 500;
    }

    /* Cards inside main */
    .entry-card {
      background: #fdfdfd;
      border-left: 4px solid var(--accent);
      padding: 12px 16px;
      border-radius: 8px;
      margin-bottom: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      transition: transform 0.2s ease;
    }

    .entry-card:hover {
      transform: translateY(-2px);
    }

    .entry-card .title {
      font-weight: 600;
      color: var(--accent);
      margin-bottom: 4px;
    }

    .entry-card .meta {
      font-size: 13px;
      color: var(--muted);
      margin-bottom: 6px;
    }

    /* Achievements with checkmark */
    ul li {
      position: relative;
      padding-left: 20px;
      margin: 8px 0;
    }

    ul li::before {
      content: "âœ“";
      color: var(--accent);
      font-weight: bold;
      position: absolute;
      left: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
      .sidebar, .main {
        width: 100%;
        border-right: none;
      }
      h1 {
        font-size: 1.8em;
      }
      h2 {
        font-size: 1.3em;
      }
    }

  </style>
</head>
<body>
  <div class="container">
    
    <!-- Sidebar -->
    <div class="sidebar">
      <h1><%- data.personalInfo.name %></h1>
      <p><strong>Email:</strong> <%- data.personalInfo.email %></p>
      <p><strong>Contact:</strong> <%- data.personalInfo.contact %></p>
      <% if (data.personalInfo.address) { %>
        <p><strong>Address:</strong> <%- data.personalInfo.address %></p>
      <% } %>
      <% if (data.personalInfo.linkedin) { %>
        <p><strong>LinkedIn:</strong> <a href="<%- data.personalInfo.linkedin %>"><%- data.personalInfo.linkedin %></a></p>
      <% } %>
      <% if (data.personalInfo.github) { %>
        <p><strong>GitHub:</strong> <a href="<%- data.personalInfo.github %>"><%- data.personalInfo.github %></a></p>
      <% } %>
      <% if (data.skills.length) { %>
        <div class="section">
          <h2>Skills</h2>
          <% data.skills.forEach(skillGroup => { %>
            <p><strong><%- skillGroup.category %>:</strong></p>
            <% skillGroup.items.forEach(item => { %>
              <span class="skill-badge"><%- item %></span>
            <% }) %>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Main Content -->
    <div class="main">
      <% if (data.summary) { %>
      <div class="section">
        <h2>Professional Summary</h2>
        <p><%- data.summary %></p>
      </div>
      <% } %>


      <% data.workExperience.forEach(exp => { %>
        <div>
          <h3><%- exp.role %> @ <%- exp.company %></h3>
          <p><%- exp.startDate %> - <%- exp.endDate %></p>

          <% if (Array.isArray(exp.description)) { %>
            <ul>
              <% exp.description.forEach(point => { %>
                <li><%- point %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><%- exp.description %></p>
          <% } %>
        </div>
      <% }) %>


      <% data.projects.forEach(p => { %>
        <div>
          <h3><%- p.title %></h3>

          <% if (Array.isArray(p.description)) { %>
            <ul>
              <% p.description.forEach(point => { %>
                <li><%- point %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><%- p.description %></p>
          <% } %>
        </div>
      <% }) %>


      <% if (data.education.length) { %>
      <div class="section">
        <h2>Education</h2>
        <% data.education.forEach(edu => { %>
          <div class="entry-card">
            <div class="title"><%- edu.degree %></div>
            <div class="meta"><%- edu.institution %> (<%- edu.startDate %> - <%- edu.endDate || "Present" %>)</div>
          </div>
        <% }) %>
      </div>
      <% } %>

      <% if (data.achievements.length) { %>
      <div class="section">
        <h2>Achievements</h2>
        <ul>
          <% data.achievements.forEach(a => { %>
            <li class="highlight"><%- a %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
    </div>

  </div>
</body>
</html>
