<!--
  Modern CV Template: Card Layout (EJS)
  --------------------------------------------------------------------
  This EJS template renders the "modern" CV design used for:
    - Live HTML preview in the frontend
    - PDF generation via Puppeteer
    - DOCX export via the backend service

  Data Source:
    The `data` object passed to this template conforms to the CVData
    TypeScript interface and includes:
      • personalInfo      - Candidate profile + contact details
      • summary           - Professional summary section
      • workExperience    - Work history with text or bullet points
      • projects          - Project portfolio entries
      • education         - Academic background
      • skills            - Categorized list of skills
      • achievements      - Key achievements or awards

  Layout Responsibilities:
    - Present the CV in a clean, card-based UI structure
    - Keep styling lightweight and PDF-friendly for consistent rendering
    - Ensure responsive design for browser preview
    - Render user input safely using EJS escaping (<%- %>)

  Notes for Developers:
    - Avoid inserting inline scripts; this template is optimized
      primarily for server-side rendering and PDF generation.
    - Maintain flexible layout elements (no absolute positioning)
      to prevent PDF shift issues when Puppeteer renders.
    - All editable styling should remain inside the <style> block
      to support isolated template theming.
-->


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>

  <style>
    :root {
      --accent: #2c3e50;
      --accent-light: #ecf4fa;
      --muted: #7f8c8d;
      --bg: #f5f6fa;
      --card: #ffffff;

      /* UPDATED: softer highlight color */
      --highlight-bg: #fff4d6;

      --border-radius: 12px;
    }

    body {
      margin: 0;
      padding: 20px;
      font-family: 'Inter', 'Segoe UI', Helvetica, sans-serif;
      background-color: var(--bg);
      color: #333;
      line-height: 1.6;
    }

    /* ==========================
        CENTERED HEADER
    ========================== */
    .header {
      text-align: center;
      padding: 20px 30px 10px 30px;
      background: var(--card);
      border-radius: var(--border-radius);
      margin: 0 auto 20px auto;
      max-width: 1000px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .header h1 {
      font-size: 2.2em;
      color: var(--accent);
      margin: 0 0 10px 0;
      letter-spacing: 0.5px;
    }

    .header .contact-line {
      font-size: 0.95em;
      color: var(--muted);
      margin-top: 5px;
    }

    .contact-line a {
      color: var(--accent);
      text-decoration: none;
      font-weight: 600;
    }

    .contact-line span {
      margin: 0 6px;
      color: #bfbfbf;
    }

    .container {
      display: flex;
      max-width: 1000px;
      margin: 0 auto;
      background: var(--card);
      border-radius: var(--border-radius);
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      overflow: hidden;
    }

    .sidebar {
      width: 30%;
      background-color: var(--accent-light);
      padding: 30px;
      box-sizing: border-box;
      border-right: 1px solid #ddd;
    }

    .sidebar p,
    .sidebar a {
      word-break: break-word;
      overflow-wrap: anywhere;
      display: block;
      margin-bottom: 8px;
    }

    .main {
      width: 70%;
      padding: 30px;
      box-sizing: border-box;
    }

    h2 {
      font-size: 1.5em;
      color: var(--accent);
      margin-top: 20px;
      margin-bottom: 10px;
      border-bottom: 2px solid #eaeaea;
      padding-bottom: 4px;
    }

    h3 {
      color: var(--accent);
      margin-bottom: 3px;
      font-size: 1.1em;
      font-weight: 600;
    }

    p, li {
      line-height: 1.6;
    }

    ul {
      padding-left: 20px;
      margin: 5px 0;
    }

    a {
      color: var(--accent);
      text-decoration: none;
      font-weight: 500;
    }

    a:hover {
      text-decoration: underline;
    }

    .section {
      margin-bottom: 25px;
    }

    /* UPDATED: softer highlight */
    .highlight {
      background-color: var(--highlight-bg);
      font-weight: bold;
      padding: 2px 6px;
      border-radius: 4px;
    }

    .skill-badge {
      display: inline-block;
      background: var(--accent);
      color: #fff;
      font-size: 13px;
      padding: 4px 10px;
      margin: 4px 4px 0 0;
      border-radius: 20px;
      font-weight: 500;
    }

    .entry-card {
      background: #fdfdfd;
      border-left: 4px solid var(--accent);
      padding: 12px 16px;
      border-radius: 8px;
      margin-bottom: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      transition: transform 0.2s ease;
    }

    .entry-card .title {
      font-weight: 600;
      color: var(--accent);
      margin-bottom: 4px;
    }

    .entry-card .meta {
      font-size: 13px;
      color: var(--muted);
      margin-bottom: 6px;
    }

    ul li {
      position: relative;
      padding-left: 20px;
      margin: 8px 0;
    }

    ul li::before {
      content: "✓";
      color: var(--accent);
      font-weight: bold;
      position: absolute;
      left: 0;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
      .sidebar, .main {
        width: 100%;
        border-right: none;
      }
      .header h1 {
        font-size: 1.8em;
      }
      h2 {
        font-size: 1.3em;
      }
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="header">
    <h1><%- data.personalInfo.name %></h1>

    <div class="contact-line">
      <a href="mailto:<%- data.personalInfo.email %>"><%- data.personalInfo.email %></a>
      <span>•</span>
      <span><%- data.personalInfo.contact %></span>

      <% if (data.personalInfo.linkedin) { %>
        <span>•</span>
        <a href="<%- data.personalInfo.linkedin %>">LinkedIn</a>
      <% } %>

      <% if (data.personalInfo.github) { %>
        <span>•</span>
        <a href="<%- data.personalInfo.github %>">GitHub</a>
      <% } %>


      <% if (data.personalInfo.portfolio) { %>
        <span>•</span>
        <a href="<%- data.personalInfo.portfolio %>">Portfolio</a>
      <% } %>

      <% if (data.personalInfo.address) { %>
        <span>•</span>
        <span><%- data.personalInfo.address %></span>
      <% } %>
    </div>
  </div>

  <!-- LAYOUT -->
  <div class="container">

    <!-- Sidebar -->
    <div class="sidebar">
      <% if (data.skills.length) { %>
        <div class="section">
          <h2>Skills</h2>
          <% data.skills.forEach(skillGroup => { %>
            <p><strong><%- skillGroup.category %>:</strong></p>
            <% skillGroup.items.forEach(item => { %>
              <span class="skill-badge"><%- item %></span>
            <% }) %>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Main -->
    <div class="main">

      <% if (data.summary) { %>
      <div class="section">
        <h2>Professional Summary</h2>
        <p><%- data.summary %></p>
      </div>
      <% } %>

      <% data.workExperience.forEach(exp => { %>
        <div class="section">
          <h3><%- exp.role %> @ <%- exp.company %></h3>
          <p><%- exp.startDate %> - <%- exp.endDate %></p>

          <% if (Array.isArray(exp.description)) { %>
            <ul>
              <% exp.description.forEach(point => { %>
                <li><%- point %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><%- exp.description %></p>
          <% } %>
        </div>
      <% }) %>

      <% if (data.projects.length) { %>
        <div class="section">
          <h2>Projects</h2>
        </div>
      <% } %>

      <% data.projects.forEach(p => { %>
        <div class="section">
          <h3><%- p.title %></h3>
          <% if (Array.isArray(p.description)) { %>
            <ul>
              <% p.description.forEach(point => { %>
                <li><%- point %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p><%- p.description %></p>
          <% } %>
        </div>
      <% }) %>

      <% if (data.education.length) { %>
      <div class="section">
        <h2>Education</h2>
        <% data.education.forEach(edu => { %>
          <div class="entry-card">
            <div class="title"><%- edu.degree %></div>
            <div class="meta"><%- edu.institution %> (<%- edu.startDate %> - <%- edu.endDate || "Present" %>)</div>
          </div>
        <% }) %>
      </div>
      <% } %>

      <% if (data.achievements.length) { %>
      <div class="section">
        <h2>Achievements</h2>
        <ul>
          <% data.achievements.forEach(a => { %>
            <li><%- a %></li>   <!-- highlight removed here -->
          <% }) %>
        </ul>
      </div>
      <% } %>

    </div>
  </div>

</body>
</html>

