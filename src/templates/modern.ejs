<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background-color: #f5f6fa;
      margin: 0;
      padding: 20px;
      font-family: 'Helvetica Neue', sans-serif;
      color: #333333;
    }
    .container {
      max-width: 900px;
      margin: 0 auto;
      background: #ffffff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    h1 {
      font-size: 2.5em;
      margin-bottom: 5px;
      border-bottom: 2px solid #3498db;
      padding-bottom: 5px;
    }
    h2 {
      font-size: 1.4em;
      color: #3498db;
      margin-top: 20px;
      margin-bottom: 10px;
      border-bottom: 1px solid #eee;
      padding-bottom: 3px;
    }
    p, li {
      line-height: 1.6;
    }
    ul {
      padding-left: 20px;
    }
    .section {
      margin-bottom: 25px;
    }
    .highlight {
      background-color: #ffeaa7;
      font-weight: bold;
    }
    a {
      color: #3498db;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    
    <!-- Personal Info -->
    <div class="section">
      <h1><%- data.personalInfo.name %></h1>
      <p>Email: <%- data.personalInfo.email %> | Contact: <%- data.personalInfo.contact %></p>
      <p>
        <% if (data.personalInfo.linkedin) { %>
          LinkedIn: <a href="<%- data.personalInfo.linkedin %>"><%- data.personalInfo.linkedin %></a> |
        <% } %>
        <% if (data.personalInfo.github) { %>
          GitHub: <a href="<%- data.personalInfo.github %>"><%- data.personalInfo.github %></a>
        <% } %>
        <% if (data.personalInfo.portfolio) { %>
          | Portfolio: <a href="<%- data.personalInfo.portfolio %>"><%- data.personalInfo.portfolio %></a>
        <% } %>
      </p>
    </div>

    <!-- Skills -->
    <% if (data.skills.length) { %>
    <div class="section">
      <h2>Skills</h2>
      <ul>
        <% data.skills.forEach(skill => { %>
          <li class="highlight"><%- skill %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <!-- Work Experience -->
    <% if (data.workExperience.length) { %>
    <div class="section">
      <h2>Work Experience</h2>
      <% data.workExperience.forEach(exp => { %>
        <p><strong><%- exp.role %> at <%- exp.company %></strong> (<%- exp.startDate %> - <%- exp.endDate || "Present" %>)</p>
        <p><%- exp.description %></p>
      <% }) %>
    </div>
    <% } %>

    <!-- Projects -->
    <% if (data.projects.length) { %>
    <div class="section">
      <h2>Projects</h2>
      <% data.projects.forEach(project => { %>
        <p><strong><%- project.title %></strong></p>
        <p><%- project.description %></p>
        <% if (project.link) { %>
          <p>Link: <a href="<%- project.link %>"><%- project.link %></a></p>
        <% } %>
      <% }) %>
    </div>
    <% } %>

    <!-- Achievements -->
    <% if (data.achievements.length) { %>
    <div class="section">
      <h2>Achievements</h2>
      <ul>
        <% data.achievements.forEach(a => { %>
          <li class="highlight"><%- a %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

  </div>
</body>
</html>
