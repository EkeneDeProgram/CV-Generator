<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%- data.personalInfo.name %> - CV</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background-color: #f5f6fa;
      margin: 0;
      padding: 20px;
      font-family: 'Helvetica Neue', sans-serif;
      color: #333333;
    }

    .container {
      display: flex;
      max-width: 1000px;
      margin: 0 auto;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
      overflow: hidden;
    }

    .sidebar {
      width: 30%;
      background-color: #f0f4f8;
      padding: 30px;
      box-sizing: border-box;
      border-right: 1px solid #ddd;
    }

    /* Wrap text properly */
    .sidebar p,
    .sidebar a {
      word-break: break-word;
      overflow-wrap: break-word;
      display: inline-block;
    }

    .main {
      width: 70%;
      padding: 30px;
      box-sizing: border-box;
    }

    h1 {
      font-size: 2em;
      margin-bottom: 10px;
      border-bottom: 2px solid #3498db;
      padding-bottom: 5px;
    }

    h2 {
      font-size: 1.4em;
      color: #3498db;
      margin-top: 20px;
      margin-bottom: 10px;
      border-bottom: 1px solid #eee;
      padding-bottom: 3px;
    }

    p, li {
      line-height: 1.6;
    }

    ul {
      padding-left: 20px;
    }

    .section {
      margin-bottom: 25px;
    }

    .highlight {
      background-color: #ffeaa7;
      font-weight: bold;
    }

    a {
      color: #3498db;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Responsive for smaller screens */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
      .sidebar, .main {
        width: 100%;
        border-right: none;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    
    <!-- Sidebar: Personal Info + Skills -->
    <div class="sidebar">
      <!-- Personal Info -->
      <div class="section">
        <h1><%- data.personalInfo.name %></h1>
        <p>Email: <%- data.personalInfo.email %></p>
        <p>Contact: <%- data.personalInfo.contact %></p>
        <p>Address: <%- data.personalInfo.address %></p>
        <% if (data.personalInfo.linkedin) { %>
          <p>LinkedIn: <a href="<%- data.personalInfo.linkedin %>"><%- data.personalInfo.linkedin %></a></p>
        <% } %>
        <% if (data.personalInfo.github) { %>
          <p>GitHub: <a href="<%- data.personalInfo.github %>"><%- data.personalInfo.github %></a></p>
        <% } %>
        <% if (data.personalInfo.portfolio) { %>
          <p>Portfolio: <a href="<%- data.personalInfo.portfolio %>"><%- data.personalInfo.portfolio %></a></p>
        <% } %>
        <% if (data.personalInfo.socialLinks && data.personalInfo.socialLinks.length) { %>
          <p>Social Links:</p>
          <ul>
            <% data.personalInfo.socialLinks.forEach(link => { %>
              <li><a href="<%- link %>"><%- link %></a></li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <!-- Skills -->
      <% if (data.skills.length) { %>
      <div class="section">
        <h2>Skills</h2>
        <% data.skills.forEach(skillGroup => { %>
          <p><strong><%- skillGroup.category %>:</strong></p>
          <ul>
            <% skillGroup.items.forEach(item => { %>
              <li class="highlight"><%- item %></li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
      <% } %>
    </div>


    <!-- Main: Summary + Work Experience + Projects + Education + Achievements -->
    <div class="main">

      <!-- âœ… Professional Summary Section -->
      <% if (data.summary) { %>
      <div class="section">
        <h2>Professional Summary</h2>
        <p><%- data.summary %></p>
      </div>
      <% } %>

      <!-- Work Experience -->
      <% if (data.workExperience.length) { %>
      <div class="section">
        <h2>Work Experience</h2>
        <% data.workExperience.forEach(exp => { %>
          <p><strong><%- exp.role %> at <%- exp.company %></strong> (<%- exp.startDate %> - <%- exp.endDate || "Present" %>)</p>
          <p><%- exp.description %></p>
        <% }) %>
      </div>
      <% } %>

      <!-- Projects -->
      <% if (data.projects.length) { %>
      <div class="section">
        <h2>Projects</h2>
        <% data.projects.forEach(project => { %>
          <p><strong><%- project.title %></strong></p>
          <p><%- project.description %></p>
          <% if (project.link) { %>
            <p>Link: <a href="<%- project.link %>"><%- project.link %></a></p>
          <% } %>
        <% }) %>
      </div>
      <% } %>

      <!-- Education -->
      <% if (data.education.length) { %>
      <div class="section">
        <h2>Education</h2>
        <% data.education.forEach(edu => { %>
          <p><strong><%- edu.degree %></strong></p>
          <p><%- edu.institution %> (<%- edu.startDate %> - <%- edu.endDate || "Present" %>)</p>
        <% }) %>
      </div>
      <% } %>

      <!-- Achievements -->
      <% if (data.achievements.length) { %>
      <div class="section">
        <h2>Achievements</h2>
        <ul>
          <% data.achievements.forEach(a => { %>
            <li class="highlight"><%- a %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
    </div>
    
  </div>
</body>
</html>
